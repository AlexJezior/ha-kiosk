# GPIO pin for PIR OUT (BCM numbering)
# Use GPIO 17 (Pin 11)
PIR_PIN=17

# Seconds of inactivity before display turns off
OFF_DELAY=60

# Display output name from `wlr-randr`
# Run 'wlr-randr' to verify this name
DISPLAY_NAME=HDMI-A-1

# Home Assistant dashboard URL
HA_URL=http://homeassistant:8123/dashboard-nebula/0?kiosk

# Watchdog health check interval in seconds (default: 300 = 5 minutes)
# The watchdog restarts the browser if it crashes while screen is on
WATCHDOG_INTERVAL=300

# Optional overrides (normally fine to leave unset)
# WAYLAND_DISPLAY=wayland-0
# XDG_RUNTIME_DIR=/run/user/1000
